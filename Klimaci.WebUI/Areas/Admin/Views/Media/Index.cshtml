@using Klimaci.Core.Paging
@using Klimaci.Entity
@model PagedResult<Media>
@{
    ViewData["Title"] = "Medya";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container py-3">
    <h1 class="mb-3">Medya</h1>
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminAlerts.cshtml")

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-6">
            <input class="form-control" type="text" name="search" value="@Context.Request.Query["search"]" placeholder="Dosya adı / URL" />
        </div>
        <div class="col-md-2 d-grid">
            <button class="btn btn-primary">Ara</button>
        </div>
    </form>

    <div class="row g-3">
        @foreach (var m in Model.Items)
        {
            <div class="col-6 col-md-3 col-lg-2">
                <div class="card h-100">
                    <img src="@m.FileUrl" class="card-img-top" style="aspect-ratio:1/1; object-fit:cover;" />
                    <div class="card-body p-2">
                        <div class="small text-truncate" title="@m.Title">@m.Title</div>
                        <form method="post" asp-action="Delete" class="mt-2 d-grid">
                            <input type="hidden" name="Id" value="@m.Id" />
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?')">Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    @{
        var totalPages = (int)Math.Ceiling((double)Model.Total / Model.PageSize);
        var page = Model.Page;
    }
    <nav class="mt-3">
        <ul class="pagination">
            @for (int p = 1; p <= totalPages; p++)
            {
                <li class="page-item @(p==page?"active":"")">
                    <a class="page-link" href="?page=@p&pageSize=@Model.PageSize&search=@Context.Request.Query["search"]">@p</a>
                </li>
            }
        </ul>
    </nav>
</div>
