@using Klimaci.DTO.RoleDTOs
@model RoleAddDTO
@{
    ViewData["Title"] = "Yeni Rol";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container py-3">
    <h1>Yeni Rol</h1>
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminAlerts.cshtml")
    <form asp-action="Create" method="post" class="vstack gap-3">
        <div class="col-md-6">
            <label class="form-label">Rol Adı</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-light">Geri</a>
        </div>
        @Html.AntiForgeryToken()
    </form>
</div>
