@using Klimaci.Core.Paging
@using Klimaci.Entity
@model PagedResult<TeamMember>
@{
    ViewData["Title"] = "Ekip";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container py-3">
    <h1>Ekip</h1>
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminAlerts.cshtml")

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-5">
            <input name="search" class="form-control" value="@Context.Request.Query["search"]" placeholder="İsim / ünvan ara" />
        </div>
        <div class="col-md-3">
            <select name="sortBy" class="form-select">
                <option value="">Ad</option>
                <option value="createddate" selected="@(Context.Request.Query["sortBy"]=="createddate")">Oluşturma</option>
                <option value="displayorder" selected="@(Context.Request.Query["sortBy"]=="displayorder")">Sıra</option>
            </select>
        </div>
        <div class="col-md-2">
            <select name="desc" class="form-select">
                <option value="false" selected="@(Context.Request.Query["desc"]=="false")">Artan</option>
                <option value="true" selected="@(Context.Request.Query["desc"]=="true")">Azalan</option>
            </select>
        </div>
        <div class="col-md-2 d-grid">
            <button class="btn btn-primary">Filtrele</button>
        </div>
    </form>

    <div class="d-flex mb-2">
        <a class="btn btn-success ms-auto" asp-action="Create">Yeni</a>
    </div>

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th style="width:90px">Sıra</th>
                <th>Ad</th>
                <th>Ünvan</th>
                <th>E-posta</th>
                <th>Yayın</th>
                <th class="text-end" style="width:220px">İşlem</th>
            </tr>
        </thead>
        <tbody id="rows">
            @foreach (var e in Model.Items)
            {
                <tr data-id="@e.Id">
                    <td><input type="number" class="form-control form-control-sm order" value="@e.DisplayOrder" /></td>
                    <td>@e.Name</td>
                    <td>@e.TitleText</td>
                    <td>@e.Email</td>
                    <td>
                        <span class="badge @(e.IsPublished ? "bg-success" : "bg-secondary")">
                            @(e.IsPublished ? "Açık" : "Kapalı")
                        </span>
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@e.Id">Düzenle</a>
                        <form method="post" asp-action="Delete" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@e.Id" />
                            <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?')">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @{
        var totalPages = (int)Math.Ceiling((double)Model.Total / Model.PageSize);
        var page = Model.Page;
        string qSearch = Context.Request.Query["search"]!;
        string qSortBy = Context.Request.Query["sortBy"]!;
        string qDesc = Context.Request.Query["desc"]!;
    }
    <nav aria-label="Sayfalama">
        <ul class="pagination">
            @for (int p = 1; p <= totalPages; p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link" href="?page=@p&pageSize=@Model.PageSize&search=@qSearch&sortBy=@qSortBy&desc=@qDesc">@p</a>
                </li>
            }
        </ul>
    </nav>

    <button id="btnReorder" class="btn btn-secondary mt-2">Sıraları Kaydet</button>
</div>

@section Scripts {
    <script>
        document.getElementById('btnReorder')?.addEventListener('click', async ()=>{
            const items = [...document.querySelectorAll('#rows tr')].map(tr => ({
                id: tr.dataset.id,
                displayOrder: parseInt(tr.querySelector('.order').value || 0)
            }));
            await fetch('@Url.Action("Reorder")', {
                method: 'POST',
                headers: { 'Content-Type':'application/json' },
                body: JSON.stringify({ items })
            });
            location.reload();
        });
    </script>
}
