@using Klimaci.DTO.UserDTOs
@model AssignRolesDTO
@{
    ViewData["Title"] = "Kullanıcı Rolleri";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var all = (IEnumerable<string>)(ViewBag.AllRoles ?? Enumerable.Empty<string>());
    var has = Model.RoleNames?.ToHashSet() ?? new HashSet<string>();
}
<div class="container py-3">
    <h1>Kullanıcı Rolleri</h1>
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminAlerts.cshtml")

    <form asp-action="Roles" method="post" class="vstack gap-3">
        <input type="hidden" asp-for="UserId" />
        <div class="row row-cols-1 row-cols-md-3 g-2">
            @foreach (var r in all)
            {
                <div class="col">
                    <div class="form-check border rounded p-2">
                        <input class="form-check-input" type="checkbox" name="RoleNames" value="@r" @(has.Contains(r) ? "checked" : "") />
                        <label class="form-check-label">@r</label>
                    </div>
                </div>
            }
        </div>
        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-light">Geri</a>
        </div>
        @Html.AntiForgeryToken()
    </form>
</div>
