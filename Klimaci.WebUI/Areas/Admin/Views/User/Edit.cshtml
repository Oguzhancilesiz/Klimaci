@using Klimaci.DTO.UserDTOs
@model UserUpdateDTO
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container py-3">
    <h1>Kullanıcı Düzenle</h1>
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminAlerts.cshtml")

    <form asp-action="Edit" method="post" class="vstack gap-3">
        <input type="hidden" asp-for="Id" />
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" for="IsActive">Aktif</label>
                </div>
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-light">Geri</a>
        </div>
        @Html.AntiForgeryToken()
    </form>

    <hr class="my-4" />
    <h5>Şifre Sıfırla</h5>
    <form asp-action="ResetPassword" method="post" class="row g-2">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="col-md-6">
            <input name="NewPassword" type="password" class="form-control" placeholder="Yeni şifre" required minlength="6" />
        </div>
        <div class="col-md-3 d-grid">
            <button class="btn btn-outline-warning">Sıfırla</button>
        </div>
        @Html.AntiForgeryToken()
    </form>
</div>
