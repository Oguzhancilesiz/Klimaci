@using Klimaci.DTO.NavigationDTOs
@model MenuItemUpdateDTO
@{
    ViewData["Title"] = "Menü Öğesi Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container py-3">
    <h1>Menü Öğesi Düzenle</h1>
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminAlerts.cshtml")

    <form asp-action="EditItem" method="post" class="vstack gap-3">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="NavigationMenuId" />
        <div class="row g-3">
            <div class="col-md-5">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="col-md-5">
                <label asp-for="Url" class="form-label"></label>
                <input asp-for="Url" class="form-control" />
            </div>
            <div class="col-md-2">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" type="number" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="Target" class="form-label"></label>
                <input asp-for="Target" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="ParentId" class="form-label"></label>
                <input asp-for="ParentId" class="form-control" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsPublished" />
                    <label class="form-check-label" asp-for="IsPublished">Yayında</label>
                </div>
            </div>
        </div>
        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary">Kaydet</button>
            <a asp-action="Items" asp-route-id="@Model.NavigationMenuId" class="btn btn-light">Geri</a>
        </div>
        @Html.AntiForgeryToken()
    </form>
</div>
