@using Klimaci.Core.Paging
@using Klimaci.Entity
@model PagedResult<NavigationMenu>
@{
    ViewData["Title"] = "Menüler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container py-3">
    <h1>Menüler</h1>
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminAlerts.cshtml")

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-6"><input name="search" class="form-control" value="@Context.Request.Query["search"]" placeholder="Ara" /></div>
        <div class="col-md-2 d-grid"><button class="btn btn-primary">Ara</button></div>
    </form>

    <div class="d-flex mb-2"><a class="btn btn-success ms-auto" asp-action="Create">Yeni Menü</a></div>

    <table class="table table-striped">
        <thead><tr><th>Başlık</th><th>Slug</th><th>Yayın</th><th class="text-end">İşlem</th></tr></thead>
        <tbody>
            @foreach (var m in Model.Items)
            {
                <tr>
                    <td>@m.Title</td>
                    <td>@m.Slug</td>
                    <td><span class="badge @(m.IsPublished?"bg-success":"bg-secondary")">@(m.IsPublished ? "Açık" : "Kapalı")</span></td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-dark" asp-action="Items" asp-route-id="@m.Id">Öğeler</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@m.Id">Düzenle</a>
                        <form method="post" asp-action="Delete" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@m.Id" /><button class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?')">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @{
        var totalPages = (int)Math.Ceiling((double)Model.Total / Model.PageSize); var page = Model.Page;
    }
    <nav>
        <ul class="pagination">
            @for (int p = 1; p <= totalPages; p++)
            {
                <li class="page-item @(p==page?"active":"")"><a class="page-link" href="?page=@p&pageSize=@Model.PageSize&search=@Context.Request.Query["search"]">@p</a></li>
            }
        </ul>
    </nav>
</div>
