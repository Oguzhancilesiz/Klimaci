@using Klimaci.DTO.SettingDTOs
@model SettingUpdateDTO
@{
    ViewData["Title"] = "Ayar Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container py-3">
    <h1>Ayar Düzenle</h1>
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AdminAlerts.cshtml")
    <form asp-action="Edit" method="post" class="vstack gap-3">
        <input type="hidden" asp-for="Id" />
        <div class="row g-3">
            <div class="col-md-4"><label class="form-label">Key</label><input asp-for="Key" class="form-control" /></div>
            <div class="col-md-4"><label class="form-label">Value</label><input asp-for="Value" class="form-control" /></div>
            <div class="col-md-2"><label class="form-label">Group</label><input asp-for="Group" class="form-control" /></div>
            <div class="col-md-6"><label class="form-label">Description</label><input asp-for="Description" class="form-control" /></div>
        </div>
        <div class="mt-3 d-flex gap-2"><button class="btn btn-primary">Kaydet</button><a asp-action="Index" class="btn btn-light">Geri</a></div>
        @Html.AntiForgeryToken()
    </form>
</div>
